<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse bg-primary sticky-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("DemoApplication", "Index", "Users", new { area = "" }, new { @class = "navbar-brand text-white" })
            </div>
            <div class="navbar-nav ml-auto">
                @Html.ActionLink("Logout", "Logout", "Users", new { area = "" }, new { @class = "text-white disable" })
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/js/validations.js")
    @RenderSection("scripts", required: false)
</body>
</html>
